{% extends 'base.html.twig' %}

{% block title %}Mon Compte{% endblock %}

{% block content %}

    <h1>Mon Compte</h1>
    {% if is_granted('ROLE_ADMIN')  %}
        <small><a href="/admin">Administrateur acceder au back office</a></small> <br>
    {% endif %}
    Bienvenue {{ app.user.firstname }} dans votre compte.

    <hr>
    <div class="row">
        <div class="col-md-4">
            <div class="account-item text-center">
                <img src="{{ asset('assets/img/secure.png') }}" alt="Modifier mon mot de passe"><br>
                <a href="{{ path('app_account_password') }}">Modifier mon mot de passe</a>
            </div>
        </div>
        <div class="col-md-4">
            <div class="account-item text-center">
                <img src="{{ asset('assets/img/phone-book.png') }}" alt="Gerer mes addresses"><br>
                <a href="{{ path('app_account_address') }}">Gerer mes addresses</a>
            </div>
        </div>
        <div class="col-md-4">
            <div class="account-item text-center">
                <img src="{{ asset('assets/img/box.png') }}" alt="Mes commandes"><br>
                <a href="{{ path('app_account_order') }}">Mes commandes</a>
            </div>
        </div>
    </div>
    <hr>

{% endblock %}
